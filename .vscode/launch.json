    "version": "0.2.0",
    "configurations": [
        {
            "name": "npm run serve",
            "command": "cd ${workspaceFolder}/backend && npm run serve",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "firefox",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:27025",
            "webRoot": "${workspaceFolder}",
            "pathMappings": [
                {
                    "url": "webpack:///src",
                    "path": "${workspaceFolder}/frontend/src"
                }
            ]
        }
    ]
}