{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2020",
        "noImplicitAny": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "sourceMap": true,
        // "strict": true,   // FIXME: enable
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "lib": [
            "es2020",
            "dom"
        ]
    },
    "include": [
        "src/**/*",
        "environments",
    ]
}